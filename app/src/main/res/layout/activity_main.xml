<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/la1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="446dp"
        android:text="Set Age"
        android:textSize="18sp"
        android:textStyle="italic" />


    <EditText
        android:id="@+id/edt1"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="211dp"
        android:layout_marginBottom="439dp"
        android:layout_toStartOf="@+id/b1"
        android:ems="10"
        android:hint="Enter Actual Age"
        android:inputType="number"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/edt2"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="357dp"
        android:layout_toStartOf="@+id/b2"
        android:ems="10"
        android:hint="Death's Daughter"
        android:inputType="numberSigned"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textSize="24sp" />

    <Button
        android:id="@+id/b2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="367dp"
        android:text="CHEAK"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv2"
        android:layout_width="284dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="223dp"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_above="@+id/tv2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="244dp"
        android:text="Death Finder"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="217dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="99dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="146dp"
        android:text="Reset And View Data" />

</RelativeLayout>